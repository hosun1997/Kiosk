<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2EFD2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:contentDescription="Logo_Suwon University"
        android:src="@drawable/emblem_08"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/nanummyeongjo"
        android:paddingTop="50dp"
        android:text="기다리지 않고 편안하게"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanummyeongjobold"
            android:gravity="center"
            android:text="여기에서"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanummyeongjobold"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="주문하세요"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_gravity="center">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageBtn1"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_gravity="top|center"
                android:background="#F8D808"
                android:scaleType="fitCenter"
                android:layout_marginTop="5dp"
                android:src="@drawable/breakfast"
                android:contentDescription="매장 식사"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매장 식사"
                android:layout_gravity="bottom|center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/round"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageBtn2"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_gravity="top|center"
                android:background="#F8D808"
                android:scaleType="fitCenter"
                android:layout_marginTop="5dp"
                android:src="@drawable/motorbike"
                android:contentDescription="포장 주문"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포장 주문"
                android:layout_gravity="bottom|center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>